<div class="column">
  <div class="ui card">
    <div class="image">
      <%= image_tag image %>
    </div>
    <div class="content">
      <%= link_to title, class: "header" %>
      <div class="meta">
        <span class="date">
          <%= worked_at %>
        </span>
      </div>
      <div class="description">
        <%= content %>
      </div>
    </div>
  </div>
</div>